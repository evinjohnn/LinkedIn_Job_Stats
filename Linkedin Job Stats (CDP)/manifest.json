{
  "manifest_version": 3,
  "name": "LinkedIn Job Stats CDP",
  "version": "1.1.0",
  "description": "Professional LinkedIn Job Stats extractor with caching and CDP.",
  "author": "YourName",
  "permissions": [
    "debugger",
    "activeTab",
    "tabs",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/jobs/*"],
      "js": ["content-cdp.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "LinkedIn Job Stats"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
