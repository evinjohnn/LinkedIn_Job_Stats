{
  "manifest_version": 3,
  "name": "LinkedIn Job Stats",
  "version": "1.0.0",
  "description": "Extract LinkedIn job stats like job views, job applies, job id",
  "permissions": [
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/jobs/*", "https://www.linkedin.com/jobs/collections/*"],
      "js": ["content-injector.js", "content-script.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["linkedin-interceptor.js"],
      "matches": ["https://www.linkedin.com/*"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "LinkedIn Job Stats"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
